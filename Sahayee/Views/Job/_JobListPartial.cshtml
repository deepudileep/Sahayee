@model Sahayee.Models.ViewModel.JobFilterViewModel

@if (Model.Jobs.Any())
{
    foreach (var job in Model.Jobs)
    {
        <div class="col-lg-12 col-md-12">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title text-primary">@job.JobTitle</h5>
                            <p class="card-text"><strong>Department:</strong> @job.Department</p>
                            <p class="card-text"><strong>Location:</strong> @job.Location</p>
                        </div>
                        <div>
                            <form method="post" asp-action="ApplyForJob">
                                <input type="hidden" name="id" value="@job.Id" />
                                <button type="submit" class="btn btn-success">Apply Now</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col-12">
        <div class="alert alert-warning" role="alert">
            No jobs found based on the applied filters.
        </div>
    </div>
}
