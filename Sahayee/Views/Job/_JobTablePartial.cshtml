@model IEnumerable<Sahayee.Models.DB.Jobs>

<table class="table">
    <thead>
        <tr>
            <th>Job Title</th>
            <th>Department</th>
            <th>Location</th>
            <th>Institution</th>
            <th>Contact Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.JobTitle</td>
                <td>@job.Department</td>
                <td>@job.Location</td>
                <td>@job.Institution</td>
                <td>@job.ContactEmail</td>
                <td>
                    <button class="btn btn-warning" onclick="openModal('@job.Id')">Edit</button>
                    <a href="/Job/AdminApplicantDetails?jobAId=@job.Id" class="btn btn-warning">Details</a>
                    @* <button class="btn btn-danger" onclick="openDeleteModal('@job.Id')">Delete</button>*@
                </td>
            </tr>
        }
    </tbody>
</table>
