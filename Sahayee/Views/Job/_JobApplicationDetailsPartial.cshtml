@model Sahayee.Models.ViewModel.JobApplicationDetailsViewModel

<div class="container mt-5">

    @if (Model.JobApplicationWithDetails.Any())
    {
        <div class="row g-4">
            @foreach (var job in Model.JobApplicationWithDetails)
            {
                <div class="col-lg-6 col-md-12">
                    <div class="card shadow  h-100">
                        <div class="card-body">
                            <!-- Job Header Section -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="card-title text-primary mb-0">@job.JobDetails.JobTitle</h5>
                                <span class="badge bg-success text-uppercase">@job.Status</span>
                            </div>
                            <!-- Job Details -->
                            <p class="text-muted mb-2">
                                <i class="bi bi-building"></i> <strong>Department:</strong> @job.JobDetails.Department
                            </p>
                            <p class="text-muted mb-2">
                                <i class="bi bi-geo-alt"></i> <strong>Location:</strong> @job.JobDetails.Location
                            </p>
                            <p class="text-muted mb-2">
                                <i class="bi bi-calendar"></i> <strong>Applied On:</strong> @job.AppliedOn.ToString("MMMM dd, yyyy")
                            </p>
                           
                            <!-- User Message -->
                            <div class="mt-3">
                                <strong>Message from Applicant:</strong>
                                <div class="alert alert-light p-2 mt-2">
                                    @if (job.FollowUpHistory != null && job.FollowUpHistory.Count > 0)
                                    {
                                        if (!string.IsNullOrEmpty(job.FollowUpHistory.Last().Notes))
                                        {
                                            <span class="badge bg-info text-dark">
                                                @job.FollowUpHistory.Last().Notes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">No message provided.</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">No message provided.</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <!-- Card Footer -->
                        <div class="card-footer bg-light d-flex justify-content-between align-items-center">
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-info-circle"></i> View Full Details
                            </a>
                            <a href="#" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-x-circle"></i> Withdraw Application
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-warning text-center" role="alert">
                <i class="bi bi-exclamation-circle"></i> No job applications found.
            </div>
        </div>
    }
</div>
