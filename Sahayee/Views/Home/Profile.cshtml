@model Sahayee.Models.DB.User
<div class="container mt-5">
    <div class="row g-4">
        <!-- First Column: Profile Section -->
        <div class="col-md-3">
            <div class="card text-center shadow-sm p-3">
                <!-- Profile Picture -->
                <img src="/Images/user.png" alt="Profile Picture" class="card-img-top rounded-circle mx-auto mb-3" style="width: 120px; height: 120px;">

                <!-- Card Body with Dynamic Data -->
                <div class="card-body">
                    <h5 class="card-title text-primary">Welcome, @Model.FirstName @Model.LastName</h5>

                    <p class="card-text">Email: @Model.Email</p>
                    <p class="card-text">Location: @Model.Location</p>
                    <p class="card-text">Phone: @Model.PhoneNumber</p>
                    <p class="card-text">Gender: @Model.Gender</p>
                    <p class="card-text">Date of Birth: @Model.DOB.ToString("MMMM dd, yyyy")</p>

                    <!-- Button to View Profile -->
                    <a href="/ProfileView" class="btn btn-outline-primary btn-sm">View Profile</a>
                </div>
            </div>
        </div>

        <!-- Second Column: Notifications Section -->
        <div class="col-md-5">
            <div class="card  shadow-sm p-3">
                <div class="card-body">
                    <h5 class="card-title text-secondary mb-4">
                        <i class="bi bi-chat-dots"></i> Communications
                    </h5>
                    <ul class="list-unstyled">
                        <li class="mb-4">
                            <h6 class="text-primary"><i class="bi bi-envelope-fill"></i> Message from Sahayee Support</h6>
                            <p>Your profile has been reviewed and shortlisted for placements in Germany. Please respond to proceed.</p>
                        </li>
                        <li class="mb-4">
                            <h6 class="text-primary"><i class="bi bi-calendar-event-fill"></i> Interview Reminder</h6>
                            <p>Your interview with XYZ Hospital (Canada) is scheduled for October 25th at 3 PM. Please confirm your availability.</p>
                        </li>
                        <li>
                            <h6 class="text-primary"><i class="bi bi-file-earmark-check"></i> Document Submission</h6>
                            <p>Thank you for submitting your documents. Our team is verifying your credentials for the upcoming placement in the UK.</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Third Column: News and Trends Section -->
        <div class="col-md-4">
            <div class="card  shadow-sm p-3">
                <div class="card-body">
                    <h5 class="card-title text-secondary mb-4">
                        <i class="bi bi-newspaper"></i> News and Trends
                    </h5>
                    <ul class="list-unstyled">
                        <li class="mb-4">
                            <h6 class="text-primary"><i class="bi bi-arrow-right-circle"></i> Placement Opportunities in the UK</h6>
                            <p>New openings for nurses in NHS hospitals. Apply now and get a chance to work with top healthcare providers.</p>
                        </li>
                        <li class="mb-4">
                            <h6 class="text-primary"><i class="bi bi-arrow-right-circle"></i> Canada Hiring Surge</h6>
                            <p>Canada is looking for healthcare professionals across various disciplines. Explore the latest openings today.</p>
                        </li>
                        <li>
                            <h6 class="text-primary"><i class="bi bi-arrow-right-circle"></i> Germany Expanding Healthcare Workforce</h6>
                            <p>Germany's healthcare sector is expanding. Find opportunities to work in one of Europe's top healthcare markets.</p>
                        </li>
                    </ul>

                    <!-- Trending Jobs -->
                    <div class="mt-4">
                        <h6 class="text-secondary"><i class="bi bi-bar-chart-fill"></i> Trending Jobs</h6>
                        <div class="mt-3">
                            <h6>By Category</h6>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-caret-right-fill"></i> Nurses - 250 Openings</li>
                                <li><i class="bi bi-caret-right-fill"></i> Home Care Assistants - 150 Openings</li>
                                <li><i class="bi bi-caret-right-fill"></i> Physicians - 80 Openings</li>
                            </ul>
                        </div>
                        <div class="mt-3">
                            <h6>By Hospital</h6>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-caret-right-fill"></i> NHS Hospitals, UK - 120 Openings</li>
                                <li><i class="bi bi-caret-right-fill"></i> Toronto General, Canada - 70 Openings</li>
                                <li><i class="bi bi-caret-right-fill"></i> Charité Hospital, Germany - 60 Openings</li>
                            </ul>
                        </div>
                        <div class="mt-3">
                            <h6>By Country</h6>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-caret-right-fill"></i> UK - 300 Openings</li>
                                <li><i class="bi bi-caret-right-fill"></i> Canada - 200 Openings</li>
                                <li><i class="bi bi-caret-right-fill"></i> Germany - 100 Openings</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
