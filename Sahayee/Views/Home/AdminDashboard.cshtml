@model Sahayee.Models.ViewModel.AdminDashCount
<section class="hero text-center  py-5">
    <div class="container mt-5">
        <div class="row">
            <!-- Main Content -->
            <div class="col-md-12">
                <!-- Metrics Section -->
                <div class="d-flex flex-wrap gap-4 mb-4">
                    @foreach (var item in Model.DashItems)
                    {
                        <div class="card p-4 text-center shadow-lg border-0 rounded-3" style="width: 22%; background-color: #ffffff;">
                            <h5 class="card-title text-primary fw-bold mb-3">@item.Title</h5>
                            <p class="card-text fs-1 text-dark mb-3">@item.ActiveCount</p>
                        </div>
                    }
                </div>

                <!-- Recent Activities Section -->
                <div class="mt-4">
                    <h2 class="mb-3 text-primary">Recent Activities</h2>
                    <ul class="list-unstyled">
                        @foreach (var item in Model.LatestItems)
                        {
                            <li class="bg-light p-3 mb-3 rounded-3 border border-secondary">
                                <i class="bi bi-info-circle me-2 text-muted"></i>@item.Title
                            </li>
                        }
                    </ul>
                </div>
            </div>

        </div>
    </div>
</section>
