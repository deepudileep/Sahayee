@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero text-center  py-5">
    <div class="container">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="display-4 fw-bold">Unlock Your Global Healthcare Career</h2>
                <p class="lead">Your journey to a successful healthcare career starts here. Explore our expert guidance and placement services.</p>
                <a class="btn btn-primary btn-lg" href="/Home/Registration">Get Started</a>
            </div>
        </div>
    </div>
</section>


<section class="container my-5">
    <!-- Career Guidance Section -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-12 text-center">
                    <h2 class="fw-bold">Career Guidance</h2>
                    <p>Our Career Guidance service offers tailored consultations to help you identify the best path in healthcare. From personalized counseling, certification support, to profile building, we help you achieve your career goals in the healthcare industry.</p>
                    <a class="btn btn-secondary">Learn More</a>
                </div>
            </div>
        </div>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <!-- Placements Section -->
            <div class="row mb-4">
                <div class="col-md-12 text-center">
                    <h2 class="fw-bold">Placements</h2>
                    <p>Find the perfect healthcare job globally. Our placements team works with top healthcare employers to connect you with the best opportunities. Whether you’re seeking a local or international role, we streamline the process for you.</p>
                    <a class="btn btn-secondary">Explore Jobs</a>
                </div>
            </div>
        </div>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <!-- About Us Section -->
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="fw-bold">About Sahayee</h2>
                    <p>Sahayee is a leading platform dedicated to healthcare professionals, offering comprehensive career services including career guidance, job placements, and certification support. Our mission is to help healthcare workers navigate their career paths and connect with top employers across the globe.</p>
                    <a class="btn btn-secondary" href="/About">Read More</a>
                </div>
            </div>
        </div>
    </div>
</section>


