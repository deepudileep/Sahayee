@model Sahayee.Models.ViewModel.PlacementsViewModels
@{
    ViewData["Title"] = "Job Board";
}


<!-- Main container -->
<section class="container mt-5">
    <div class="row g-4">

        <!-- First Column: Trending Jobs Section -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm rounded-lg p-4">
                <div class="card-body">
                    <h5 class="card-title text-secondary mb-4">
                        <i class="bi bi-briefcase"></i> Trending Jobs
                    </h5>
                    <!-- Trending Jobs -->
                    <div class="mt-4">
                        <!-- Trending Jobs by Category -->
                        <div class="trending-section mb-3">
                            <h6 class="font-weight-bold">By Category</h6>
                            <ul class="list-unstyled">
                                @foreach (var item in Model.JobCounts.Category)
                                {
                                    <li class="mb-2">
                                        <a href="@Url.Action("Jobs", "Job", new { position = item.Type, location = "all", institution = "all" })" class="text-decoration-none text-dark">
                                            <i class="bi bi-file-earmark-text"></i> @item.Type - <span class="font-weight-bold">@item.Count Openings</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>

                        <!-- Trending Jobs by Hospital -->
                        <div class="trending-section mb-3">
                            <h6 class="font-weight-bold">By Hospital</h6>
                            <ul class="list-unstyled">
                                @foreach (var item in Model.JobCounts.Hospital)
                                {
                                    <li class="mb-2">
                                        <a href="@Url.Action("Jobs", "Job", new { position = "all", location = "all", institution = item.Type })" class="text-decoration-none text-dark">
                                            <i class="bi bi-hospital"></i> @item.Type - <span class="font-weight-bold">@item.Count Openings</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>

                        <!-- Trending Jobs by Country -->
                        <div class="trending-section">
                            <h6 class="font-weight-bold">By Country</h6>
                            <ul class="list-unstyled">
                                @foreach (var item in Model.JobCounts.Country)
                                {
                                    <li class="mb-2">
                                        <a href="@Url.Action("Jobs", "Job", new { position = "all", location = item.Type, institution = "all" })" class="text-decoration-none text-dark">
                                            <i class="bi bi-globe"></i> @item.Type - <span class="font-weight-bold">@item.Count Openings</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                    <!-- News and Trends -->
                    <h5 class="card-title text-secondary mt-4 mb-4">
                        <i class="bi bi-newspaper"></i> News and Trends
                    </h5>
                    <ul class="list-unstyled">
                        <li class="mb-4">
                            <div class="d-flex justify-content-between">
                                <h6 class="text-primary"><i class="bi bi-arrow-right-circle"></i> Placement Opportunities in the UK</h6>
                                <small class="text-muted">3 days ago</small>
                            </div>
                            <p>New openings for nurses in NHS hospitals. Apply now and get a chance to work with top healthcare providers.</p>
                        </li>
                        <li class="mb-4">
                            <div class="d-flex justify-content-between">
                                <h6 class="text-primary"><i class="bi bi-arrow-right-circle"></i> Canada Hiring Surge</h6>
                                <small class="text-muted">1 week ago</small>
                            </div>
                            <p>Canada is looking for healthcare professionals across various disciplines. Explore the latest openings today.</p>
                        </li>
                        <li>
                            <div class="d-flex justify-content-between">
                                <h6 class="text-primary"><i class="bi bi-arrow-right-circle"></i> Germany Expanding Healthcare Workforce</h6>
                                <small class="text-muted">2 weeks ago</small>
                            </div>
                            <p>Germany's healthcare sector is expanding. Find opportunities to work in one of Europe's top healthcare markets.</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Second Column: News and Trends Section -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="card-title text-primary">Latest News</h2>
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <h4 class="h5 text-dark">Canada Expanding Healthcare Workforce</h4>
                            <p>The Canadian healthcare system is undergoing a hiring surge, especially for nursing staff and specialists.</p>
                        </li>
                        <li class="mb-3">
                            <h4 class="h5 text-dark">Germany Boosts Healthcare Hiring</h4>
                            <p>Germany is offering attractive packages for healthcare professionals, with a focus on specialists and home care staff.</p>
                        </li>
                        <li>
                            <h4 class="h5 text-dark">UK NHS Opens New Vacancies</h4>
                            <p>The UK's NHS system has announced new opportunities across various departments. Nurses and assistants are in high demand.</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Third Column: Query Section -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="card-title text-primary">Post a Query to Sahayee</h2>
                    <div class="query-box">
                        <form action="submit-query" method="post">
                            <div class="mb-3">
                                <input type="text" name="name" class="form-control" placeholder="Your Name" required>
                            </div>
                            <div class="mb-3">
                                <input type="email" name="email" class="form-control" placeholder="Your Email" required>
                            </div>
                            <div class="mb-3">
                                <input type="tel" name="contact" class="form-control" placeholder="Your Contact Number" required>
                            </div>
                            <div class="mb-3">
                                <select name="profession" class="form-select" required>
                                    <option value="" disabled selected>Select Profession</option>
                                    <option value="Nurse">Nurse</option>
                                    <option value="Home Care Assistant">Home Care Assistant</option>
                                    <option value="Physician">Physician</option>
                                    <option value="Lab Technician">Lab Technician</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <select name="country" class="form-select" required>
                                    <option value="" disabled selected>Looking for Opportunities in</option>
                                    <option value="UK">UK</option>
                                    <option value="Canada">Canada</option>
                                    <option value="Germany">Germany</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <textarea name="message" class="form-control" placeholder="Your Message" rows="4"></textarea>
                            </div>
                            <div class="text-center">
                                <input type="submit" value="Submit Query" class="btn btn-primary w-100 mb-3">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div> <!-- End Row -->
</section> <!-- End Container -->
